<?xml version="1.0"?>
<ruleset name="Hackerspace">
    <description>Custom set of rules to check for the Hackerspace WordPress plugin</description>

        <exclude-pattern>/docroot/wp-admin/*</exclude-pattern>
        <exclude-pattern>/docroot/wp-includes/*</exclude-pattern>
        <exclude-pattern>/docroot/wp-*.php</exclude-pattern>
        <exclude-pattern>/docroot/index.php</exclude-pattern>
        <exclude-pattern>/docroot/xmlrpc.php</exclude-pattern>
        <exclude-pattern>/docroot/wp-content/plugins/*</exclude-pattern>

        <rule ref="Squiz.PHP.CommentedOutCode" />
        <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace" />
        <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter" />
        <rule ref="Generic.Commenting.Todo" />
        <rule ref="Generic.ControlStructures.InlineControlStructure" />
        
        <!-- we prefer 4 space for indentation like PSR-2 -->
	<rule ref="Generic.WhiteSpace.ScopeIndent.Incorrect" />

        <!-- TODO add a rule about return -->
        <!-- TODO add rule about wordpres files/ classes/method naming conventions -->
        <!-- TODO add rule about {} positions (PSR based -->

        <!-- based on the WordPresse ruleset see https://github.com/WordPress-Coding-Standards -->
	<rule ref="WordPress">
            <!-- we prefer 4 space for indentation like PSR-2 -->
            <exclude name="WordPress.WhiteSpace.PhpIndent.Incorrect" />
            <exclude name="WordPress.WhiteSpace.ScopeIndent.Incorrect" />
            <!-- we do not like unecessary spaces in method and functions parenthesis  -->
            <exclude name="WordPress.Functions.FunctionCallSignature" />
            <exclude name="WordPress.WhiteSpace.ControlStructureSpacing" />
        </rule>
</ruleset>
